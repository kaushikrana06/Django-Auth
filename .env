# Project
PROJECT_NAME=simple-auth

# Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Backend (Django)
DJANGO_SECRET_KEY=dev-secret-change-me
DJANGO_DEBUG=true

# CORS / allowed origins (dev)  ‚Üê add 3000
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000

# API base as seen by the browser
# - Vite dev uses /api (proxied)
# - Frontend container uses absolute URL (no proxy)
VITE_API_BASE_URL=/api
API_BASE_URL=http://localhost:8000/api

# Vite dev server proxy target (where Django lives)
DEV_API_PROXY_TARGET=http://127.0.0.1:8000

ACCESS_TOKEN_SECONDS=30
REFRESH_TOKEN_DAYS=7
